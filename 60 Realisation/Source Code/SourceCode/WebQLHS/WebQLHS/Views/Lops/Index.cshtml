}

<h2>Danh sách lớp</h2>

<p>
    @Html.ActionLink("Thêm lớp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLop)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

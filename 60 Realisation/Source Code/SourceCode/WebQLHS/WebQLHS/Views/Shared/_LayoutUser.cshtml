<!DOCTYPE html>

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Required meta tags -->
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Website Quản Lý Học Sinh</title>
    <link rel="stylesheet" href="https://selectize.github.io/selectize.js/css/selectize.default.css" data-theme="default">
    <script src="https://selectize.github.io/selectize.js/js/selectize.js"></script>

    <style type="text/css">
        body {
            background-image: url('https://static1.squarespace.com/static/52d6cb6be4b0b5fc69b8d205/t/5307d431e4b06c565def6aa7/1393022004734/education-background-checks.jpg?format=1500w');
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>
<body>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/Content/Images/icon.png" width="30" height="30">
            <b><i>school</i></b>
        </a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","HocSinhs")">Quản Lý Học Sinh</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","GiaoViens")">Quản Lý Giáo Viên</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","MonHocs")">Quản Lý Môn Học</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","TaiKhoans")">Quản Lý Tài Khoản</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","BangDiems")">Quản Lý Điểm</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","QuiDinhs")">Quản Lý Qui Định</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Lops")">Quản Lý Lớp</a>
            </li>


        </ul>
    </nav>

    <div class="container">
        <div class="container">
            <div class="jumbotron">
                @RenderSection("scripts", required: false)
                @RenderBody()
                </div>
            </div>
        </div>
</body>
</html>